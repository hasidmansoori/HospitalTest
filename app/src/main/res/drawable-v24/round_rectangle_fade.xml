<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle" >

    <!-- fill/color -->
    <solid
        android:color="#fadfda"/>

    <!-- Control the width and height of the shape -->
    <size
        android:width="200dp"
        android:height="@dimen/_90sdp"/>

    <!-- Control the radius of each corners -->
    <corners
        android:topLeftRadius="@dimen/_13sdp"
        android:topRightRadius="@dimen/_13sdp"
        android:bottomLeftRadius="@dimen/_13sdp"
        android:bottomRightRadius="@dimen/_13sdp"/>
</shape>